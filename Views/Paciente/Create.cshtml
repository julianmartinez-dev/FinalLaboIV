@model Turnos.Models.Paciente

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        Importar datos desde archivo CSV:
        <form asp-action="Importar" enctype="multipart/form-data">
            <div class="form-group">
                <input name="archImportar" id="archImportar" type="file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Importar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div>
        <form class="col s12" asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate">
                    <label asp-for="Nombre"></label>
                    <span asp-validation-for="Nombre" ></span>
                </div>
                <div class="input-field col s6">                    
                        <input asp-for="Apellido" type="text" class="validate">
                            <label asp-for="Apellido"></label>
                            <span asp-validation-for="Apellido" ></span>
                        </div>
                    </div>

                    <div class="input-field col s12">
                        <i class="material-icons prefix">chrome_reader_mode</i>
                        <input asp-for="Dni" type="text" class="validate">
                        <label asp-for="Dni"></label>
                        <span asp-validation-for="Dni" ></span>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">markunread_mailbox</i>
                        <input asp-for="Direccion" type="text" class="validate">
                        <label asp-for="Direccion"></label>
                        <span asp-validation-for="Direccion" ></span>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">phone</i>
                        <input asp-for="Telefono" type="tel" class="validate">
                        <label asp-for="Telefono"></label>
                        <span asp-validation-for="Telefono" ></span>
                    </div>    
                    <div class="input-field col s12">
                        <i class="material-icons prefix">local_post_office</i>
                        <input asp-for="Email" type="tel" class="validate">
                        <label asp-for="Email"></label>
                    <span asp-validation-for="Email" ></span>
                </div> 
            <div class="row">
                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Grabar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                <div class="col s6 m6">
                    <a class="waves-effect waves-light btn grey darken-4" asp-action="Index"><i class="material-icons left">undo</i>Volver</a>                    
                </div>
            </div>
        </form>
    </div>
</div>